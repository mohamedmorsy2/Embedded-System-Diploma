#include <avr\io.h>
#include "std_types.h"
#include "lcd.h"
#include "adc.h"
#include "lm35_sensor.h"
#include "timer0.h"














int main (void)

{
	ADC_ConfigType adc_config = {INTERNAL , pr__8};   /*ADC CONFIGRATION*/
	SREG |= (1<<7); /*enable I_BIT*/





	/*drivers initialization */

	ADC_init(&adc_config);
	LCD_init();
	DcMotor_Init();
	PWM_Timer0_Start(64);
	uint8 temp =0;
	LCD_displayString("temp =    c");


	while(1)
	{
		temp = LM35_getTemperature();

		if(temp >=100)
		{
			LCD_moveCursor(0,7);
			LCD_intgerToString(temp);

		}
		else
		{
			LCD_moveCursor(0,7);
			LCD_intgerToString(temp);
			LCD_displayString(" ");
		}

		/*temperature cases*/

		if(temp >= 120)
		{
			DcMotor_Rotate(CW ,100);
		}




	}


	return 0;
}
