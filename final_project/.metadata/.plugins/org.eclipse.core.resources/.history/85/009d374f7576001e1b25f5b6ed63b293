#include <avr\io.h>
#include  <util\delay.h>
#include "keypad.h"
#include "lcd.h"
#include "uart.h"








int main(void)
{

	uint8 data,condition  ;
	USART_ConfigType uart_config = {asynch , disabled ,one_bit ,eight_bit ,9600};
	LCD_init();

	UART_init(&uart_config);
	LCD_displayString("plz enter pass :");
	int pass1[5]={0};
	int pass1_confirm[5]={0};
	int i,pass_check=0 ;
	int door_pass=0 , change_pass =0 ;
	int j=0; /* for error*/
	while(1)
	{
		while(pass_check == 0)
		{
			/* Initialize arrays*/
			for(i=0 ; i<5 ; i++)
			{
				pass1_confirm[i] = 0;
				pass1[i] = 0;

			}
			i=0;
			UART_sendByte('*');  /*set password*/

			LCD_clearScreen();

			LCD_displayString("plz enter pass :");

			_delay_ms(600);


			data = KEYPAD_getPressedKey();



			/*first time enter pass of size 5 and display and store it in array*/
			while(data != '=')
			{
				if (i==5)
				{
					/* do nothinf*/
				}

				else if (data != '=')
				{
					LCD_intgerToString(data);
					LCD_moveCursor(1,i);
					_delay_ms(250);
					LCD_displayCharacter('*');
					pass1[i] = data;
					_delay_ms(600);
					i++;
				}
				data = KEYPAD_getPressedKey();
				_delay_ms(600);
			}




			LCD_clearScreen();
			LCD_displayString("plz re_enter pass :");
			LCD_moveCursor(1,0);


			i=0;
			data = KEYPAD_getPressedKey();



			/*re_enter Password */
			while(data != '=')
			{
				if (i==5)
				{
					/* do nothinf*/
				}

				else if (data != '=')
				{
					LCD_intgerToString(data);
					LCD_moveCursor(1,i);
					_delay_ms(250);
					LCD_displayCharacter('*');
					pass1_confirm[i] = data;
					_delay_ms(600);
					i++;
				}
				data = KEYPAD_getPressedKey();
				_delay_ms(600);
			}

			_delay_ms(600);

			for(i=0 ; i<5 ; i++)
			{
				UART_sendByte(pass1[i]);
			}



			for(i=0 ; i<5 ; i++)
			{
				UART_sendByte(pass1_confirm[i]);
			}



			pass_check =UART_recieveByte();
			if(pass_check == 0)
			{
				LCD_moveCursor(0,0);

				LCD_clearScreen();
				LCD_displayString("plz enter pass :");
				i=0;
			}
			/*
		if(pass_check == 0)
		{
			LCD_displayString("NO");
		}
		else
		{
			LCD_displayString("yes");
		}*/

		}
		/**********************************************/

		while(pass_check == 1)
		{
			LCD_moveCursor(0,0);

			LCD_clearScreen();
			LCD_displayString("+ : open door");
			LCD_moveCursor(1,0);
			LCD_displayString("- : change pass");
			_delay_ms(600);
			condition = KEYPAD_getPressedKey();


			/*open door*/

			if(condition == '+' )
			{
				while(door_pass == 0)
				{
					UART_sendByte('#');  /*door case*/
					LCD_clearScreen();
					LCD_displayString("enter password");
					_delay_ms(600);
					data = KEYPAD_getPressedKey();
					i=0;
					//LCD_moveCursor(1,i);
					while(data != '=')
					{
						if (i==5)
						{
							/* do nothinf*/
						}

						else if (data != '=')
						{
							LCD_moveCursor(1,i);
							LCD_intgerToString(data);
							LCD_moveCursor(1,i);
							_delay_ms(250);
							LCD_displayCharacter('*');
							pass1[i] = data;
							_delay_ms(600);
							i++;
						}
						data = KEYPAD_getPressedKey();
						_delay_ms(600);
					}
					for(i=0 ; i<5 ; i++)
					{
						UART_sendByte(pass1[i]);
					}
					_delay_ms(10);

					door_pass = UART_recieveByte();
					j++;
					/*************error*/
					if(j==3)
					{
						LCD_clearScreen();
						LCD_displayString("error");
						_delay_ms(1000);
					}



				}


				door_pass = 0;
				j=0;

				condition=0;



			}
			/******************change pass *******************/
			else if(condition == '-' )
			{


				while(change_pass == 0)
				{
					UART_sendByte('$');  /*change password*/
					LCD_clearScreen();
					LCD_displayString("enter password");
					_delay_ms(600);
					data = KEYPAD_getPressedKey();
					i=0;
					//LCD_moveCursor(1,i);
					while(data != '=')
					{
						if (i==5)
						{
							/* do nothinf*/
						}

						else if (data != '=')
						{
							LCD_moveCursor(1,i);
							LCD_intgerToString(data);
							LCD_moveCursor(1,i);
							_delay_ms(250);
							LCD_displayCharacter('*');
							pass1[i] = data;
							_delay_ms(600);
							i++;
						}
						data = KEYPAD_getPressedKey();
						_delay_ms(600);
					}
					for(i=0 ; i<5 ; i++)
					{
						UART_sendByte(pass1[i]);
					}
					_delay_ms(10);

					change_pass = UART_recieveByte();

				}


				change_pass = 0;
				pass_check=0;

				condition=0;
			}


		}

		_delay_ms(600);



	}


	return 0 ;
}
